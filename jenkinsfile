pipeline {
    agent any

    tools {
        maven 'Maven3'   // Name from Jenkins Global Tool Configuration
        jdk 'jdk11'      // Name from Jenkins Global Tool Configuration
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'ğŸ”¹ Cloning source code...'
                git branch: 'main', url: 'https://github.com/vinodkumarthati/demo.git'
            }
        }

        stage('Build') {
            steps {
                echo 'ğŸ”¹ Building the project with Maven...'
                sh 'mvn clean package -DskipTests=false'
            }
        }

        stage('Test') {
            steps {
                echo 'ğŸ”¹ Running test cases...'
                sh 'mvn test'
            }
            post {
                always {
                    echo 'ğŸ“Š Publishing test results...'
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }

        stage('Run Application') {
            steps {
                echo 'ğŸš€ Running the built Java application...'
                sh 'java -cp target/*.jar com.example.App'
            }
        }

        stage('Archive Artifacts') {
            steps {
                echo 'ğŸ“¦ Archiving JAR file as build artifact...'
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }

    post {
        success {
            echo 'âœ… Build, test, and archive completed successfully!'
        }
        failure {
            echo 'âŒ Build failed. Check console output for errors.'
        }
    }
}
